main_choice = input("Enter 1 for length conversion, or 2 for temperature conversion, or 3 for weight conversion:")
if main_choice == '1':
    # Length conversion
    choice=input("Enter '1' to convert feet to meters or '2' to convert meters to feet:")
    if choice=='1':
            feet=input("Enter the distance in feet:")
            meters=float(feet)*0.3048
            print("The distance in meters is:",meters)
    elif choice=='2':
            meters=input("Enter the distance in meters:")
            feet=float(meters)*3.28084
            print("The distance in feet is:",feet)


elif main_choice == '2':
    # Temperature conversion
    choice = input("Enter '1' to convert Celsius to Fahrenheit or '2' to convert Fahrenheit to Celsius:")
    if choice == '1':
        celsius = input("Enter the temperature in Celsius:")
        fahrenheit = (float(celsius) * 9/5) + 32
        print("The temperature in Fahrenheit is:", fahrenheit)
    elif choice == '2':
        fahrenheit = input("Enter the temperature in Fahrenheit:")
        celsius = (float(fahrenheit) - 32) * 5/9
        print("The temperature in Celsius is:", celsius)
elif main_choice == '3':
    # Weight conversion
    choice = input("Enter '1' to convert pounds to kilograms or '2' to convert kilograms to pounds:")
    if choice == '1':
        pounds = input("Enter the weight in pounds:")
        kilograms = float(pounds) * 0.453592
        print("The weight in kilograms is:", kilograms)
    elif choice == '2':
        kilograms = input("Enter the weight in kilograms:")
        pounds = float(kilograms) * 2.20462
        print("The weight in pounds is:", pounds)